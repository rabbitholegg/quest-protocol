{
  "search.exclude": {
    "**/coverage.json": true,
    "**/deployments": true,
    "**/.openzeppelin": true,
    "**/node_modules": true,
    "**/build": true,
    "**/artifacts": true,
    "**/coverage": true,
    "**/migrations": true,
    "**/typechain-types": true,
    "**/lib": true,
  },
  "editor.formatOnSave": true,
  "solidity.formatter": "forge",
  "solidity.linter": "solhint",
  "[solidity]": {
      "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "[markdown]": {
    "editor.formatOnSave": false,
  }
}